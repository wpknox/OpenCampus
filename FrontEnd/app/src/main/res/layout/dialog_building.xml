<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ss4.opencampus.mapViews.MapsActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:padding="0dp"
        android:statusBarColor="#000000"
        android:background="@drawable/ic_building_background">

        <ImageView
            android:id="@+id/background_image"
            android:alpha=".4"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="1dp"
            android:cropToPadding="true"
            tools:ignore="ContentDescription"
            android:src="@drawable/building_pearson" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Pearson Hall"
            android:textSize="34sp"
            android:textColor="#000"
            android:textStyle="bold|italic"
            android:id="@+id/heading"/>

        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/heading"
            android:text="Building Description. "
            android:textColor="#000"
            android:textSize="22sp" />

        <Button
            android:id="@+id/floorplan_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/action_cancel"
            android:layout_marginBottom="10dp"
            android:text="View Floorplan"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/action_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:text="Cancel"
            android:textColor="#000000"
            android:textSize="18sp" />

    </RelativeLayout>



</RelativeLayout>
